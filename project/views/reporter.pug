extends layout

block content
  div(class='title')
    h1(id='title') 記者比一比
  form
    div(class='input')
      div(id='reporter_media')
        div(style='display: flex')
          div(id='one_reporter_media')
            div(id='media') 報社 - 記者 :
            input(id='media1' type='text' placeholder='報社一')
            p(style='margin:0px;color:gray') -
            input(id='reporter1' type='text' placeholder='記者一')
            p(style='margin:0px') |
            input(id='media2' type='text' placeholder='報社二')
            p(style='margin:0px; color:gray') -
            input(id='reporter2' type='text' placeholder='記者二')
        //- div(style='display: flex')  
        //-   div(id='one_reporter_media')
        //-     div(id='media' style='color:white;') 報社 - 記者 :    
